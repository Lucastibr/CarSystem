@using CarSystem.Web.Models.Vehicle
@model VehicleViewModel

<form method="post" role="form">
    <input asp-for="Id" type="hidden"/>
    <div asp-validation-summary="None"></div>
    <div class="form-group">
        <div class="form-group">
            <label asp-for="CarLicensePlate"></label>
            <input asp-for="CarLicensePlate" class="form-control" />
            <span asp-validation-for="CarLicensePlate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Chassis"></label>
            <input asp-for="Chassis" class="form-control" type="text" />
            <span asp-validation-for="Chassis" class="text-danger"></span>
        </div>
        <div class="form-group">
            <select asp-for="EnterpriseId" asp-items="Model.Enterprises" class="select2" style="width: 50%">
                <option value="">Selecione</option>
            </select>
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit">Salvar</button>
        </div>

    </div>
</form>

@section Scripts
{
    <script type="text/javascript">
        $(function() {
            $('.select2').select2();
        })
    </script>
}
